<% layout('layouts/main') -%>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Sidebar (Icon Menu) -->
        <div class="col-1 d-none d-md-block sidebar">
            <div class="d-flex flex-column py-3">
                <a href="/admin" class="sidebar-icon active w-100 text-center py-2" data-bs-toggle="tooltip" data-bs-placement="right" title="Admin Dashboard"><i class="fas fa-shield-halved"></i></a>
                <a href="/admin/users" class="sidebar-icon w-100 text-center py-2" data-bs-toggle="tooltip" data-bs-placement="right" title="Manage Users"><i class="fas fa-users"></i></a>
                <a href="/admin/portfolios" class="sidebar-icon w-100 text-center py-2" data-bs-toggle="tooltip" data-bs-placement="right" title="Manage Portfolios"><i class="fas fa-briefcase"></i></a>
                <a href="/admin/feedbacks" class="sidebar-icon w-100 text-center py-2" data-bs-toggle="tooltip" data-bs-placement="right" title="Manage Feedbacks"><i class="fas fa-comments"></i></a>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-11 col-md-11">
            <div class="row">
                <div class="col-auto mb-4">
                    <div class="card p-3 shadow-sm">
                        <h2 class="mb-0">Admin Dashboard</h2>
                        <p class="text-muted mb-0">(Manage users, portfolios, and feedbacks)</p>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="card h-100 shadow-sm p-4">
                        <h4 class="mb-3 text-primary">Users</h4>
                        <p class="card-text">Total users: <%= users.length %></p>
                        <a href="/admin/users" class="btn btn-primary">Manage Users</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card h-100 shadow-sm p-4">
                        <h4 class="mb-3 text-primary">Portfolios</h4>
                        <p class="card-text">Total portfolios: <%= portfolios.length %></p>
                        <a href="/admin/portfolios" class="btn btn-primary">Manage Portfolios</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card h-100 shadow-sm p-4">
                        <h4 class="mb-3 text-primary">Feedbacks</h4>
                        <p class="card-text">Total feedbacks: <%= feedbacks.length %></p>
                        <a href="/admin/feedbacks" class="btn btn-primary">Manage Feedbacks</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>