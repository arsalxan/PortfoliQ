<% layout('layouts/main') -%>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                    <h3 class="mb-0">Feedback Details</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <% if (feedback.portfolio.screenshot) { %>
                            <img src="<%= feedback.portfolio.screenshot %>" alt="Portfolio Screenshot" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover;" onerror="this.onerror=null;this.src='/images/defaultscreenshot.svg';">
                        <% } else { %>
                            <img src="/images/defaultscreenshot.svg" alt="Default Screenshot" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover;">
                        <% } %>
                        <h4 class="card-title mb-1"><%= feedback.portfolio.user.fullName %>'s Portfolio</h4>
                        <p class="text-muted"><%= feedback.portfolio.description %></p>
                        <a href="<%= feedback.portfolio.url %>" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                            View Portfolio <i class="fas fa-external-link-alt ms-1"></i>
                        </a>
                    </div>

                    <hr>

                    <h5 class="mb-3">Feedback from <%= feedback.user.username %></h5>
                    <ul class="list-group list-group-flush mb-4">
                        <% if (feedback.design) { %><li class="list-group-item"><strong>Design:</strong> <%= feedback.design %></li><% } %>
                        <% if (feedback.responsiveness) { %><li class="list-group-item"><strong>Responsiveness:</strong> <%= feedback.responsiveness %></li><% } %>
                        <% if (feedback.content) { %><li class="list-group-item"><strong>Content:</strong> <%= feedback.content %></li><% } %>
                        <% if (feedback.ux_flow) { %><li class="list-group-item"><strong>UX Flow:</strong> <%= feedback.ux_flow %></li><% } %>
                        <% if (feedback.accessibility) { %><li class="list-group-item"><strong>Accessibility:</strong> <%= feedback.accessibility %></li><% } %>
                        <% if (feedback.technical_performance) { %><li class="list-group-item"><strong>Technical Performance:</strong> <%= feedback.technical_performance %></li><% } %>
                        <% if (feedback.additional) { %><li class="list-group-item"><strong>Additional Comments:</strong> <%= feedback.additional %></li><% } %>
                        <li class="list-group-item text-muted">Given on: <%= feedback.createdAt ? feedback.createdAt.toLocaleDateString() : 'N/A' %></li>
                    </ul>

                    <div class="d-flex justify-content-end">
                        <% if (currentUser && feedback.user.equals(currentUser._id)) { %>
                            <form action="/portfolios/<%= feedback.portfolio._id %>/feedbacks/<%= feedback._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt me-1"></i> Delete Feedback
                                </button>
                            </form>
                        <% } %>
                        <a href="/portfolios/<%= feedback.portfolio._id %>/feedbacks" class="btn btn-secondary btn-sm ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to All Feedbacks
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
