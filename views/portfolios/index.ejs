<% layout('layouts/main') -%>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All Portfolios</h1>
        <a href="/portfolios/new" class="btn btn-primary">Add New Portfolio <i class="fas fa-plus-circle ms-2"></i></a>
    </div>

    <div class="row">
        <% if (portfolios.length) { %>
            <% portfolios.forEach(portfolio => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="portfolio-card card h-100">
                    <div class="portfolio-card-img-placeholder">
                        <a href="<%= portfolio.url %>" target="_blank">
                            <% if (portfolio.screenshot) { %>
                                <img src="<%= portfolio.screenshot %>" alt="Portfolio Screenshot" class="img-fluid">
                            <% } else { %>
                                <img src="/images/defaultscreenshot.svg" alt="Default Screenshot" class="img-fluid">
                            <% } %>
                        </a>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1"><a href="<%= portfolio.url %>" target="_blank" class="text-decoration-none" style="color: var(--text-primary); overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: block;"><%= portfolio.user.fullName %>'s Portfolio <i class="fas fa-external-link-alt ms-1"></i></a></h5>
                        <p class="card-subtitle text-secondary mb-2">by <%= portfolio.user.username %></p>
                        <% if (portfolio.description) { %>
                            <p class="card-text flex-grow-1"><%= portfolio.description.substring(0, 100) %><% if (portfolio.description.length > 100) { %>...<% } %></p>
                        <% } else { %>
                            <p class="card-text text-secondary flex-grow-1">No description provided.</p>
                        <% } %>
                        <div class="mt-auto pt-3 d-flex flex-wrap justify-content-center gap-2">
                            <% if (portfolio.gitRepo) { %>
                                <a href="<%= portfolio.gitRepo %>" target="_blank" class="btn btn-github btn-sm"><i class="fab fa-github"></i> Git Repo</a>
                            <% } %>
                            <a href="/portfolios/<%= portfolio._id %>/feedbacks/new" class="btn btn-primary btn-sm">Give Feedback</a>
                            <a href="/portfolios/<%= portfolio._id %>/feedbacks" class="btn btn-secondary btn-sm">Feedbacks (<%= portfolio.feedbacks.length %>)</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    No portfolios have been submitted yet. Be the first to <a href="/portfolios/new" class="alert-link">add one!</a>
                </div>
            </div>
        <% } %>
    </div>
</div>