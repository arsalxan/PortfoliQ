<% layout('layouts/main') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="portfolio-detail-card card mb-4">
                <% if (portfolio.screenshot) { %>
                    <img src="<%= portfolio.screenshot %>" alt="Portfolio Screenshot" class="card-img-top" style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
                <% } else { %>
                    <img src="/images/defaultscreenshot.svg" alt="Default Screenshot" class="card-img-top" style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
                <% } %>
                <div class="card-body">
                    <h1 class="card-title text-center mb-3"><a href="<%= portfolio.url %>" target="_blank" class="text-decoration-none" style="color: var(--text-primary);"><%= portfolio.url %> <i class="fas fa-external-link-alt ms-1"></i></a></h1>
                    <h6 class="card-subtitle mb-3 text-center text-secondary">Submitted by: <%= portfolio.user.username %></h6>
                    <% if (portfolio.description) { %>
                        <p class="card-text text-center lead"><%= portfolio.description %></p>
                    <% } else { %>
                        <p class="card-text text-center text-secondary lead">No description provided.</p>
                    <% } %>
                    <% if (currentUser && portfolio.user.equals(currentUser._id)) { %>
                        <div class="d-flex justify-content-center mt-4">
                            <a href="/portfolios/<%= portfolio._id %>/edit" class="btn btn-secondary me-2">Edit Portfolio <i class="fas fa-edit ms-1"></i></a>
                            <form action="/portfolios/<%= portfolio._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-danger">Delete Portfolio <i class="fas fa-trash-alt ms-1"></i></button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>