<% layout('layouts/main') -%>

<div class="container-fluid d-flex flex-column min-vh-100">
    <div class="row flex-grow-1 justify-content-center align-items-center">
        <!-- Illustration Section -->
        <div class="col-12 col-md-6 d-flex justify-content-center align-items-center p-4">
            <img src="/images/login.svg" alt="Login Illustration" class="img-fluid" style="max-height: 70vh; object-fit: contain;">
        </div>

        <!-- Login Form Section -->
        <div class="col-12 col-md-6 d-flex justify-content-center align-items-center p-4">
            <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 12px;">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4" style="font-weight: 700; color: var(--text-primary);">Log in</h1>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label" style="color: var(--text-primary); font-weight: 500;">Username</label>
                            <input type="text" name="username" id="username" class="form-control" autofocus required style="border-radius: 8px; padding: 10px 15px; border-color: var(--border);">
                            <div class="invalid-feedback">
                                Please enter your username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label" style="color: var(--text-primary); font-weight: 500;">Password</label>
                            <div class="input-group has-validation">
                                <input type="password" name="password" id="password" class="form-control" required style="border-radius: 8px 0 0 8px; padding: 10px 15px; border-color: var(--border);">
                                <span class="input-group-text" id="togglePassword" style="cursor: pointer; border-radius: 0 8px 8px 0;"><i class="fas fa-eye"></i></span>
                                <div class="invalid-feedback">
                                    Please enter your password.
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary" style="background-color: var(--primary); border-color: var(--primary); color: white; border-radius: 8px; padding: 10px; font-weight: 600;">Log in</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <span style="color: var(--text-secondary);">Don't have an account?</span>
                        <br>
                        <a href="/register" class="btn btn-outline-primary mt-2">Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>